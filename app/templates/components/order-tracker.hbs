<div class="order-tracker">
	<div>
		
		Select food for {{orderManager.selectedDay}}
		
		
	</div>
	
	  
	{{#each-in orderManager.menuSelection as |day menuOrder|}}
	<div>
		
		<div onclick={{action "setDayTo" day}}>{{day}}</div>
		<dl>
			<dt>BreakFast</dt>
			<dd>{{#if menuOrder.breakfast}}
			  {{menuOrder.breakfast}} <span{{action "remove" day "breakfast" }}>&#10006; </span>
			{{/if}}
			</dd>
			<dt>Lunch</dt>
			<dd>{{#if menuOrder.lunch}}
			  {{menuOrder.lunch}} <span{{action "remove" day "lunch" }}>&#10006; </span>
			{{/if}}</dd>
			<dt>Dinner</dt>
			<dd>{{#if menuOrder.dinner}}
			  {{menuOrder.dinner}} <span{{action "remove" day "dinner" }}>&#10006; </span>
			{{/if}}</dd>
		</dl>
		
	</div>
	{{/each-in}}
</div>

{{yield}}
